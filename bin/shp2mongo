#!/bin/bash

## get the base directory of the package
script_dir="$( cd "$( dirname `which shp2mongo` )" && cd ../ && pwd )"

## source in necessary functions
source "$script_dir"/scripts/wget_census_data.sh
source "$script_dir"/scripts/prepare_variables_mongodb.sh
source "$script_dir"/scripts/shp2geojson.sh
source "$script_dir"/scripts/shp2geojson_mult.sh
source "$script_dir"/scripts/format_geojson.sh
source "$script_dir"/scripts/format_geojson_mult.sh
source "$script_dir"/scripts/remove_database.sh
source "$script_dir"/scripts/input_mapping.sh
source "$script_dir"/scripts/insert_records.sh
source "$script_dir"/scripts/insert_records_mult.sh

# read options and set variables before executing functions
options='hlmf:d:c:H:p:s:r'
while getopts "$options" option
do
    case "$option" in
        h  ) h_opt; exit;; # HELP/documentation
        l  ) l_opt;; # data source is LOCAL (no arugment needed)
        m  ) m_opt;; # MULTIPLE files (specify directory with shapefiles)
        f  ) f_opt;; # FILE (if local and only one), directory of FILES (if local and multiple), FILE to get from census (if not local)
        s  ) s_opt;; # STATE fips code (two digit)
        d  ) d_opt;; # DATABASE name
        c  ) c_opt;; # COLLECTION name
        H  ) H_opt;; # HOST
        p  ) p_opt;; # PORT
        r  ) r_opt;; # REMOVE database or index before reinserting records/documents
        \? ) echo "Unknown option: -$OPTARG" >&2; exit 1;;
        :  ) echo "Arugment required for option -$OPTARG" >&2; exit 1;;
        *  ) echo "Unused option: -$OPTARG" >&2; exit 1;;
    esac
done

## execute the functions sourced above based on user options
wget_census_data
shp2geojson_mult
format_geojson_mult
remove_database
input_mapping
insert_records_mult

printf "\nComplete"
